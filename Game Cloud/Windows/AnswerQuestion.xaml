<Window x:Class="Game_Cloud.Windows.AnswerQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Cloud.Windows"
        mc:Ignorable="d"
        Title="Answer a Question" Height="300" Width="300" Icon="/Game Cloud;component/Assets/GameCloud.ico" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Type your reply..." VerticalAlignment="Top"/>
        <TextBox x:Name="textResponse" Margin="10,40,10,42" TextWrapping="Wrap" AcceptsReturn="True" />
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="50" Click="buttonCancel_Click"/>
        <Button x:Name="buttonSend" Content="Send" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Margin="0,0,75,10" Click="buttonSend_Click"/>

    </Grid>
</Window>
